---
layout: layouts/base.html
title: Tags
---
<div class="container">
    <h1 class="mb-4">Tags</h1>
    <div class="row">
        <div class="col">
            <ul>
                {% assign sorted_tags = collections.postTags | sort_natural %}
                {% for tag in sorted_tags %}
                    <li>
                        <a href="/posts/tags/{{ tag }}/" class="text-decoration-none">
                            {{ tag | replace: "-", " " | capitalize }}
                        </a>
                        <span class="text-muted ms-2">({{ collections.posts | postsWithTag: tag }})</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
